<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragmentHomeMenuAll"
            style="@style/MenuHomeFragmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_menu_home_fragment_active"
            android:text="@string/fragment_home_menu_all" />

        <View
            style="@style/DeviderVerticalStyle"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/fragmentHomeMenuBestSeller"
            style="@style/MenuHomeFragmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_menu_home_fragment_normal"
            android:text="@string/fragment_home_menu_best_seller" />

        <View
            style="@style/DeviderVerticalStyle"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/fragmentHomeMenuPopular"
            style="@style/MenuHomeFragmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_menu_home_fragment_normal"
            android:text="@string/fragment_home_menu_popular" />
    </LinearLayout>

</LinearLayout>