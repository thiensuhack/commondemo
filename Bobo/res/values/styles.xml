<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppNavigationDrawerBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppNavigationDrawerTheme" parent="AppNavigationDrawerBaseTheme">
        <item name="android:background">@android:color/transparent</item>
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="OrangeCustomCirclePageIndicator" parent="@android:style/Theme.Light">
		<item name="pageColor">@color/white</item>
        <item name="fillColor">@color/pink</item>
        <item name="strokeColor">@color/dark_pink</item>        
        <item name="strokeWidth">0.5dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>

    <style name="ProNameStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProPriceCurrentStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProPriceDisCountStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuDrawerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTitleBarStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuHomeFragmentStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DeviderVerticalStyle">
        <item name="android:background">@color/gray</item>
    </style>
    <!-- Button Styles -->
    <style name="ButtonBaseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ButtonPinkStyle" parent="@style/ButtonBaseStyle">
        <item name="android:background">@drawable/button_pink</item>
    </style>
    <style name="ButtonBlackStyle" parent="@style/ButtonBaseStyle">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- ListView Style -->
    <style name="ListViewStyle">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:divider">@color/bright_gray</item>
        <item name="android:background">@color/bright_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:horizontalSpacing">10dp</item>
    </style>
    <!-- Register form style -->
    <style name="RegisterEdittextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/item_edittext_background</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegisterTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegisterButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Detail  -->
    <style name="ProDetailStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="RadioGroupStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>