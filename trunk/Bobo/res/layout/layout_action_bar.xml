<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/action_bar_background"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    tools:context=".activities.HomeActivity" >

    <ImageView
        android:id="@+id/naviMenuIcon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_navi_drawer_menu"
        android:visibility="visible" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/naviMenuIcon"
        android:text="@string/app_name"
        style="@style/AppTitleBarStyle" />

    <LinearLayout
        android:id="@+id/appQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp" >

            <ImageView
                android:id="@+id/iconShopping"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_shopping"
                android:visibility="visible" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shopping_cart_background"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/pink"
                android:textSize="9sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iconBobo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_bobo_app_bar"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>