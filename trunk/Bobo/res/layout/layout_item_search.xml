<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_cart_product_selector"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/proImageSearchResult"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/proNameSearchResult"
            style="@style/ProNameStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="San pham 1" />

        <TextView
            android:id="@+id/proPriceSearchResult"
            style="@style/ProPriceCurrentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="San pham 1"
            android:gravity="left" />

        <TextView
            android:id="@+id/proPriceDiscountSearchResult"
            style="@style/ProPriceDisCountStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="San pham 1"
            android:gravity="left" />        
    </LinearLayout>

    

</LinearLayout>